<div>
  <div
    class="bg-center bg-cover bg-no-repeat aspect-[10/9] md:aspect-[16/9] relative"
    style="background-image: url('{{ 'broz3.png' | asset_url }}');"
  >
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container h-full">
      <div class="relative z-10 flex flex-col items-center justify-center h-full text-center pt-30 md:py-40">
        <p class="text-white uppercase md:text-2xl font-semibold">Dealer Locator</p>
        <h1 class="font-pure-heart text-5xl md:text-[100px] text-white md:leading-40 mb-4">Find Your Local Dealer</h1>
        <div class="bg-white/20 backdrop-blur-2xl max-w-xl w-full mt-4 flex justify-between p-1">
          <input
            type="text"
            id="dealer-search"
            placeholder="Enter ZIP code"
            maxlength="5"
            inputmode="numeric"
            pattern="\d*"
            class="border-0 focus:outline-none w-full px-4 py-2 text-white"
            oninput="this.value = this.value.replace(/[^0-9]/g, '')"
          >
          <button id="dealer-search-button" type="submit" class="bg-red-600 text-white h-full px-3">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div id="dealer-results" class="md:py-20 py-10">
    <div class="container">
      <h2 class="font-bold text-4xl md:text-[68px] uppercase">Your Local Shops</h2>
      <p class="text-black/70 mt-4">Authorized Dealers</p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 mt-10 md:mt-20">
        {% for dealer in collections.dealers.products %}
          <div
            class="dealer-card bg-white shadow-lg border border-black/20 flex flex-col"
            data-zip="{{ dealer.metafields.custom.dealer_zip | strip }}"
          >
            <div class="h-[250px] w-full">
              <img
                src="{{ dealer.featured_image | img_url: 'large' }}"
                alt="{{ dealer.title }}"
                class="w-full h-full object-cover"
              >
            </div>
            <div class="p-4 uppercase flex flex-col justify-between flex-1">
              <div class="flex flex-col gap-1 text-sm">
                <h3 class="text-lg font-medium ">{{ dealer.title }}</h3>
                <p class="text-black/70 mt-2">{{ dealer.metafields.custom.dealer_address }}</p>
                <p class="flex items-center gap-2 font-medium">
                  <i class="fa-regular fa-phone"></i>
                  <a
                    href="tel:+1{{ dealer.metafields.custom.dealer_phone_number | strip | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}"
                    class="hover:underline"
                  >
                    {{ dealer.metafields.custom.dealer_phone_number }}
                  </a>
                </p>
              </div>
              <div class="mt-4">
                <button
                  class="show-map bg-white cursor-pointer hover:bg-primary text-sm font-medium hover:text-white transition-all ease-in-out duration-300 uppercase border-primary flex justify-center py-4 border w-full"
                  data-map="{{ dealer.metafields.custom.dealer_google_map_html | escape }}"
                >
                  Directions
                </button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="flex justify-center">
        <p id="no-results" class="text-center text-black/50 hidden mt-10">No dealers found for that ZIP code.</p>
      </div>
      <div class="mt-10 md:mt-20 h-[400px] md:h-[600px]" id="dealer-map-container" style="display: block;">
        <p id="map-instruction" class="text-center text-black/50">Click a dealer's "Directions" button to view their map here.</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mapButtons = document.querySelectorAll('.show-map');
    const mapContainer = document.getElementById('dealer-map-container');

    mapButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const mapHTML = this.getAttribute('data-map');
        if (mapHTML && mapContainer) {
          mapContainer.innerHTML = mapHTML;

          // After injecting, override iframe attributes
          const iframe = mapContainer.querySelector('iframe');
          if (iframe) {
            iframe.removeAttribute('width');
            iframe.removeAttribute('height');
            iframe.style.width = '100%';
            iframe.style.height = '100%';
            iframe.style.border = '0';
          }

          // Optional scroll into view
          mapContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const searchBtn = document.getElementById('dealer-search-button');
    const searchInput = document.getElementById('dealer-search');
    const dealerCards = document.querySelectorAll('.dealer-card');
    const resultsSection = document.getElementById('dealer-results');
    const noResults = document.getElementById('no-results');

    function filterDealers() {
      const inputVal = searchInput.value.trim();
      const zipPrefix = inputVal.match(/^\d{2}/)?.[0];
      let hasMatch = false;

      dealerCards.forEach((card) => {
        const dealerZip = (card.dataset.zip || '').trim();
        const dealerZipPrefix = dealerZip.slice(0, 2);

        if (!zipPrefix || dealerZipPrefix === zipPrefix) {
          card.style.display = 'flex';
          hasMatch = true;
        } else {
          card.style.display = 'none';
        }
      });

      // Toggle "No results" and Map container
      noResults.style.display = hasMatch ? 'none' : 'block';
      document.getElementById('dealer-map-container').style.display = hasMatch ? 'block' : 'none';

      if (resultsSection) {
        resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }

    searchBtn.addEventListener('click', filterDealers);

    searchInput.addEventListener('keydown', function (e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        filterDealers();
      }
    });
  });
</script>
