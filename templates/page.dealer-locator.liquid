<div>
  <div
    class="bg-center bg-cover bg-no-repeat aspect-[9/9] md:aspect-[16/9] relative"
    style="background-image: url('{{ 'broz3.png' | asset_url }}');"
  >
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container h-full">
      <div class="relative z-10 flex flex-col items-center justify-center h-full text-center py-40">
        <p class="text-white uppercase md:text-2xl font-semibold">Dealer Locator</p>
        <h1 class="font-pure-heart text-5xl md:text-[100px] text-white md:leading-40">Find Your Local Dealer</h1>
        <div class="bg-white/20 backdrop-blur-2xl max-w-xl w-full mt-4">
          <input type="text" id="dealer-search" placeholder="Enter zip code or city" class="border-0 w-full px-4 py-2 text-white">
        </div>
      </div>
    </div>
  </div>
  <div class="md:py-20 py-10">
    <div class="container">
      <h2 class="font-bold text-4xl md:text-[68px] uppercase">Your Local Shops</h2>
      <p class="text-black/70 mt-4">Authorized Dealers</p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 mt-10 md:mt-20">
        {% for dealer in collections.dealers.products %}
          <div class="bg-white shadow-lg border border-black/20 flex flex-col">
            <div class="h-[250px] w-full">
              <img
                src="{{ dealer.featured_image | img_url: 'large' }}"
                alt="{{ dealer.title }}"
                class="w-full h-full object-cover"
              >
            </div>
            <div class="p-4 uppercase flex flex-col justify-between flex-1">
              <div class="flex flex-col gap-1 text-sm">
                <h3 class="text-lg font-medium ">{{ dealer.title }}</h3>
                <p class="text-black/70 mt-2">{{ dealer.metafields.custom.dealer_address }}</p>
                <p class="flex items-center gap-2 font-medium">
                  <i class="fa-regular fa-phone"></i>
                  <a
                    href="tel:+1{{ dealer.metafields.custom.dealer_phone_number | strip | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}"
                    class="hover:underline"
                  >
                    {{ dealer.metafields.custom.dealer_phone_number }}
                  </a>
                </p>
              </div>
              <div class="mt-4">
                <button
                  class="show-map bg-white cursor-pointer hover:bg-primary text-sm font-medium hover:text-white transition-all ease-in-out duration-300 uppercase border-primary flex justify-center py-4 border w-full"
                  data-map="{{ dealer.metafields.custom.dealer_google_map_html | escape }}"
                >
                  Directions
                </button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="mt-10 md:mt-20 h-[400px] md:h-[600px]" id="dealer-map-container">
        <p class="text-center text-black/50">Click a dealer's "Directions" button to view their map here.</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mapButtons = document.querySelectorAll('.show-map');
    const mapContainer = document.getElementById('dealer-map-container');

    mapButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const mapHTML = this.getAttribute('data-map');
        if (mapHTML && mapContainer) {
          mapContainer.innerHTML = mapHTML;

          // After injecting, override iframe attributes
          const iframe = mapContainer.querySelector('iframe');
          if (iframe) {
            iframe.removeAttribute('width');
            iframe.removeAttribute('height');
            iframe.style.width = '100%';
            iframe.style.height = '100%';
            iframe.style.border = '0';
          }

          // Optional scroll into view
          mapContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  });
</script>
