<div>
  <div
    class="bg-center bg-cover bg-no-repeat aspect-[10/9] md:aspect-[16/9] relative"
    style="background-image: url('{{ 'broz3.png' | asset_url }}');"
  >
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container h-full">
      <div class="relative z-10 flex flex-col items-center justify-center h-full text-center pt-30 md:py-40">
        <p class="text-white uppercase md:text-2xl font-semibold">Dealer Locator</p>
        <h1 class="font-pure-heart text-5xl md:text-[100px] text-white md:leading-40 mb-4">Find Your Local Dealer</h1>
      </div>
    </div>
  </div>
  <div id="dealer-results" class="md:py-20 py-10">
    <div class="container">
      <h2 class="font-bold text-4xl md:text-[68px] uppercase">Your Local Shops</h2>
      <p class="text-black/70 mt-4">Authorized Dealers</p>

      <div class="mt-10">
        <!-- Start Stockist.co widget -->
        <stockist-store-locator data-stockist-widget-tag="map_93ezjnvq">
          Loading store locator from <a href="https://stockist.co">Stockist store locator</a>...
        </stockist-store-locator>
        <script async src="https://stockist.co/embed/v1/widget.min.js"></script>
        <!-- End Stockist.co widget -->
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mapButtons = document.querySelectorAll('.show-map');
    const mapContainer = document.getElementById('dealer-map-container');

    mapButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const mapHTML = this.getAttribute('data-map');
        if (mapHTML && mapContainer) {
          mapContainer.innerHTML = mapHTML;

          // After injecting, override iframe attributes
          const iframe = mapContainer.querySelector('iframe');
          if (iframe) {
            iframe.removeAttribute('width');
            iframe.removeAttribute('height');
            iframe.style.width = '100%';
            iframe.style.height = '100%';
            iframe.style.border = '0';
          }

          // Optional scroll into view
          mapContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const searchBtn = document.getElementById('dealer-search-button');
    const searchInput = document.getElementById('dealer-search');
    const dealerCards = document.querySelectorAll('.dealer-card');
    const resultsSection = document.getElementById('dealer-results');
    const noResults = document.getElementById('no-results');

    function filterDealers() {
      const inputVal = searchInput.value.trim();
      const zipPrefix = inputVal.match(/^\d{2}/)?.[0];
      let hasMatch = false;

      dealerCards.forEach((card) => {
        const dealerZip = (card.dataset.zip || '').trim();
        const dealerZipPrefix = dealerZip.slice(0, 2);

        if (!zipPrefix || dealerZipPrefix === zipPrefix) {
          card.style.display = 'flex';
          hasMatch = true;
        } else {
          card.style.display = 'none';
        }
      });

      // Toggle "No results" and Map container
      noResults.style.display = hasMatch ? 'none' : 'block';
      document.getElementById('dealer-map-container').style.display = hasMatch ? 'block' : 'none';

      if (resultsSection) {
        resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }

    searchBtn.addEventListener('click', filterDealers);

    searchInput.addEventListener('keydown', function (e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        filterDealers();
      }
    });
  });
</script>
