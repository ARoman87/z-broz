<div class="pt-32 md:pt-40">
  <section class="container md:pt-10 pt-0">
    {% assign clean_term = search.terms | remove: 'tag:' %}

    {% if clean_term contains 'fitment_' %}
      {% assign fitment_parts = clean_term | remove: 'fitment_' | split: '_' %}
      <h2 class="text-3xl font-medium mb-4">
        Search results for:
        <span class="text-red-500 text-xl font-normal">
          {{ fitment_parts[0] }}
          {{ fitment_parts[1] }}
          {{ fitment_parts[2] }}
        </span>
      </h2>
    {% else %}
      <h2 class="text-3xl font-bold mb-4">Search results for: "{{ search.terms }}"</h2>
    {% endif %}

    {% if search.results_count > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            {% render 'product-card', product: item %}
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <p>No products found.</p>
    {% endif %}
  </section>
</div>
