{% assign blog = blogs.news %}
<div class="bg-background pt-24 md:pt-40 pb-20">
  <div class="container">
    <h1 class="text-5xl md:text-8xl">Blog</h1>
    <div class="pt-10 md:pt-20 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for article in blog.articles %}
        <div class="flex flex-col gap-2 md:mb-10">
          <a href="{{ article.url }}" class="h-[400px] w-full overflow-hidden rounded-lg bg-white">
            <img
              src="{{ article.image | img_url: 'grande' }}"
              alt="{{ article.title }}"
              class="w-full h-full object-cover  hover:scale-105 transition-all ease-in-out duration-300"
            >
          </a>
          <a href="{{ article.url }}" class="text-lg md:text-xl font-medium uppercase leading-tigh hover:underline">
            {{- article.title -}}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
