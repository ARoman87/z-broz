<a href="{{ product.url }}" class="flex flex-col hover:scale-[1.02] transition-transform duration-300 ease-in-out">
  <div class="w-full h-[300px] mb-4 bg-white">
    <img src="{{ product.featured_image | img_url: '500x400' }}" alt="{{ product.title }}" class="w-full h-full object-contain">
  </div>
  <div class="flex-1 flex flex-col justify-between gap-4">
    <div class="flex flex-col gap-2">
      <p class="text-black/50 uppercase font-medium">{{ product.variants.first.sku }}</p>
      <h3 class="font-medium text-xl uppercase">{{ product.title }}</h3>
    </div>
    {% assign lowest_price = product.variants[0].price %}
    {% for v in product.variants %}
      {% if v.price < lowest_price %}
        {% assign lowest_price = v.price %}
      {% endif %}
    {% endfor %}

    {% if product.available %}
      <p class="text-primary text-2xl font-medium">{{ lowest_price | money }}</p>
    {% else %}
      <div class="flex items-center justify-between text-black/70">
        <p class="text-2xl font-medium">{{ lowest_price | money }}</p>
        <p>(Out of Stock)</p>
      </div>
    {% endif %}
  </div>
</a>
